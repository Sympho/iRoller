<?xml version="1.0" encoding="UTF-8"?>
	<widget xmlns = "http://www.w3.org/ns/widgets"
		xmlns:gap = "http://phonegap.com/ns/1.0"
		id = "org.veneronslabs.iroller"
		version = "1.2.0"
		versionCode = "4">

    	<name>iRoller</name>

    	<description>
	A Smartphone Web Application to roll d20 System Dice and Formula DÃ© Dice
    	</description>

    	<author href="http://veneronslabs.blogspot.com" email="fathom@live.com">
	Daniele Veneroni
	</author>

    	<!-- ICONS -->
    
	<icon src="pics/icona114.png" /> <!-- default -->
	<icon src="pics/icona29.png" width="29" height="29" /> 
	<icon src="pics/icona36.png" width="36" height="36" /> <!-- Android -->
	<icon src="pics/icona48.png" width="48" height="48" /> <!-- Android -->
	<icon src="pics/icona57.png" width="57" height="57" /> <!-- iOS -->
	<icon src="pics/icona58.png" width="58" height="58" />
	<icon src="pics/icona64.png" width="64" height="64" />
	<icon src="pics/icona72.png" width="72" height="72" /> <!-- iOS & Android -->
	<icon src="pics/icona90.png" width="90" height="90" />
	<icon src="pics/icona114.png" width="114" height="114" /> <!-- iOS -->

	<!-- SPLASH SCREENS -->

	<gap:splash src="pics/splash.png" /> <!-- default, all platforms -->
	<gap:splash src="pics/splashios1.png" width="320" height="480" /> <!-- iOS iPhone 3a Gen. -->
	<gap:splash src="pics/splashretina.png" width="960" height="640" /> <!-- iOS Retina Display -->
	<gap:splash src="pics/splashipado.png" width="1024" height="748" /> <!-- iOS iPad Orizzontale -->
	<gap:splash src="pics/splashipadv.png" width="768" height="1004" /> <!-- iOS iPad Verticale -->

	<!-- GENERAL PREFERENCES -->    
    
	<preference name="phonegap-version" value="1.5.0" />
	<preference name="orientation" value="default" />
	<preference name="target-device" value="universal" />
	<preference name="fullscreen" value="true" /> <!-- toglie la barra in alto su iOS e Android -->

	<!-- iOS PREFERENCES -->

	<preference name="webviewbounce" value="true" />
	<preference name="prerendered-icon" value="true" /> <!-- non applica effetto gloss all'icona -->
	
	<!-- ANDROID PREFERENCES -->

	<preference name="android-minSdkVersion" value="7" /> <!-- minimo Android 2.1 -->
	<!-- <preference name="android-maxSdkVersion" value="15" /> massimo Android 4.0.3 -->
	<preference name="android-installLocation" value="auto" />
	
	<!-- PHONEGAP API FEATURES PREFERENCES -->

	<preference name="permissions" value="none"/>

</widget>
