<?xml version="1.0" encoding="UTF-8"?>
	<widget xmlns = "http://www.w3.org/ns/widgets"
		xmlns:gap = "http://phonegap.com/ns/1.0"
		id = "org.veneronslabs.iroller"
		version = "1.5.0"
		versionCode = "8">

    <name>iRoller</name>

    <description>
        A Smartphone Web Application to roll d20 System Dice and Formula DÃ© Dice
    </description>

    <author href="http://veneronslabs.blogspot.com" email="fathom@live.com">
        Daniele Veneroni
	</author>
        
        
    <!-- ICONS -->
        
    <icon src="icon.png" /> <!-- default, 114 or 72 pixels -->
        
    <icon src="icons/ios/icon.png" width="57" height="57" />
    <icon src="icons/ios/icon72.png" gap:platform="ios" width="72" height="72" />
    <icon src="icons/ios/icon114.png" width="114" height="114" />
        
    <icon src="icons/android/ldpi.png" gap:platform="android" gap:density="ldpi" /> <!-- 36 pixels -->
    <icon src="icons/android/mdpi.png" gap:platform="android" gap:density="mdpi" /> <!-- 48 pixels -->
    <icon src="icons/android/hdpi.png" gap:platform="android" gap:density="hdpi" /> <!-- 72 pixels -->
    <!-- <icon src="icons/android/xhdpi.png" gap:platform="android" gap:density="xhdpi" />  96 pixels  NOT YET SUPPORTED -->
        
    <icon src="icons/bb/icon.png" gap:platform="blackberry" /> <!-- 72 pixels -->
    <icon src="icons/bb/icon_hover.png" gap:platform="blackberry" gap:state="hover"/> <!-- 72 pixels -->
        
    <icon src="icons/winphone/icon.png" gap:platform="winphone" /> <!-- 57 pixels -->
    <icon src="icons/winphone/tileicon.png" gap:platform="winphone" gap:role="background" /> <!-- 72 pixels -->
    
    <icon src="icons/webos/icon.png" gap:platform="webos" /> <!-- 29 pixels -->
    <icon src="icons/webos/miniicon.png" gap:platform="webos" gap:role="mini" /> <!-- 15 pixels -->
    
    <!-- SPLASH SCREENS -->
    
    <gap:splash src="splash.png" /> <!-- default, 320x480 pixels -->
    
    <gap:splash src="splash/ios/iPadLandscape.png" width="1024" height="768" />
    <gap:splash src="splash/ios/iPadPortrait.png" width="768" height="1024" />
    <gap:splash src="splash/ios/iPhoneDefault.png" width="320" height="480" />
    <gap:splash src="splash/ios/iPhoneRetina.png" width="640" height="960" />
    
    <gap:splash src="splash/android/ldpi.png" gap:platform="android" gap:density="ldpi" /> <!-- at least 426x320 -->
    <gap:splash src="splash/android/mdpi.png" gap:platform="android" gap:density="mdpi" /> <!-- at least 470x320 -->
    <gap:splash src="splash/android/hdpi.png" gap:platform="android" gap:density="hdpi" /> <!-- at least 640x480 -->
    <!-- <gap:splash src="splash/android/xhdpi.png" gap:platform="android" gap:density="xhdpi" /> at least 960x720  NOT YET SUPPORTED -->
    
    <gap:splash src="splash/bb/splash.png" gap:platform="blackberry" />
    
    <gap:splash src="splash/winphone/splash.jpg" gap:platform="winphone" />

	<!-- GENERAL PREFERENCES -->    
    
	<preference name="phonegap-version" value="1.8.1" /> <!-- versione di phonegap usata -->
	<preference name="orientation" value="default" />
	<preference name="target-device" value="universal" />
	<preference name="fullscreen" value="true" /> <!-- toglie la barra in alto su iOS e Android -->

	<!-- iOS PREFERENCES -->

	<preference name="webviewbounce" value="true" />
	<preference name="prerendered-icon" value="true" /> <!-- non applica effetto gloss all'icona -->
	
	<!-- ANDROID PREFERENCES -->

	<preference name="android-minSdkVersion" value="7" /> <!-- minimo Android 2.1 -->
	<!-- <preference name="android-maxSdkVersion" value="16" /> massimo Android 4.1 -->
	<preference name="android-installLocation" value="auto" />
	
	<!-- PHONEGAP API FEATURES PREFERENCES -->

	<preference name="permissions" value="none"/>

</widget>
